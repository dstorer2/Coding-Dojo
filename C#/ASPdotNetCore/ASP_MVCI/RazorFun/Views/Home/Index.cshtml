@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Here are some delicious foods!</h1>
    @{
        var StringList = new List<string>
            {
                "Apple Pie",
                "Burritos",
                "Clams Casino",
                "Donuts"
            };
            foreach(var word in StringList)
            {
                if(word[0] == 'C')
                {
                    <div class="red">
                        <p>@word</p>
                    </div>
                }
                else
                {
                    <div>
                        <p>@word</p>
                    </div>
                }
            }
    }
</div>
