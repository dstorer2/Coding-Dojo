@model Transaction

<div class="top">
    <h1>Welcome, @ViewBag.Acct.Owner.FirstName</h1>
    <h3>Viewing @ViewBag.Acct.Name</h3>
    <a class="btn btn-sm btn-info" href="/dashboard">Home</a>
    <h3>Balance: $@ViewBag.Acct.Balance</h3>
</div>
<div class="text-center">
    
    <table class="table table-dark table-hover">
        <tr>
            <th>@ViewBag.Acct.Name Transactions</th>
            <th>Date</th>
        </tr>
        @if(ViewBag.Acct.CompletedTransactions.Count == 0){
            <tr>
                <td>No transactions to display</td>
            </tr>
        }
        else{
            foreach(var tran in ViewBag.Trans){
                <tr>
                    <td>@tran.Amount</td>
                    <td>@tran.CreatedAt</td>
                </tr>
            }
        }
    </table>
    <h2>Deposit/Withdraw: </h2>
    <form asp-controller="Home" asp-action="SubmitTransaction" method="post">
        <div class="form-group">
            <input asp-for="Amount">
        </div>
        <input type="hidden" value="@ViewBag.Acct.AcctId" name="AcctId">
        <input type="submit" class="btn btn-sm btn-primary">
    </form>

</div>