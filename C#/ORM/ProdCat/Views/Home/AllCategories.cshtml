@model Category

<div class="text-center">
    <div class="canvas">
        <div class="container">
            <h1>New Category</h1>
            <form asp-controller="Home" asp-action="SubmitCategory" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <input type="submit" class="btn btn-sm btn-success">
            </form>
        </div>
        <div class="container">
            <h1>Existing Categories</h1>
            @foreach (var cat in ViewBag.AllCat)
            {
                <h2><a href="categories/@cat.CategoryId">@cat.Name</a></h2>
            }
        </div>
    </div>
</div>