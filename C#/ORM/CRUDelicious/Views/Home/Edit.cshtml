@model Dish

<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <div class="top">
        <a href="/">Home</a>
    </div>
    <form asp-action="SubmitEdit" method="POST" class="addOrEdit">
        <div class="formBlock">
            <input asp-for="DishId" type="hidden">
            <div class="form-group">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
                <input asp-for="Name">
            </div>
            <div class="form-group">
                <label asp-for="Chef"></label>
                <span asp-validation-for="Chef"></span>
                <input asp-for="Chef">
            </div>
            <div class="form-group">
                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories"></span>
                <input asp-for="Calories">
            </div>
        </div>
        <div class="formBlock">
            <div class="form-group">
                <label asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness"></span>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-block">
            <div class="form-group">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description"></span>
                <textarea asp-for="Description" cols="30" rows="10"></textarea>
            </div>
        </div>
        <input type="submit" value="Submit">
    </form>

</div>