@model Dish

<div class="container">
    <h1>Add a new Dish</h1>
    <form asp-controller="Home" asp-action="SubmitDish" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId">
                @foreach(var chef in ViewBag.AllChefs){
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
            <span asp-validation-for="ChefId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <input type="submit" class="btn btn-sm btn-primary">
    </form>
</div>