<h5><a href="dishes/add">Add a Dish</a></h5>
<div class="text-center">
    <h1 class="display-4">Dishes</h1>
    <table class="table table-dark table-hover">
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
        @{
            foreach(var dish in ViewBag.AllDishes){
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
            }
        }

    </table>

</div>