@{
    ViewData["Title"] = "Home Page";
}

<h5><a href="chef/add">Add a Chef</a></h5>
<div class="text-center">
    <h1 class="display-4">Chefs</h1>
    <table class="table table-dark table-hover">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th># of Dishes</th>
        </tr>
        @{
            foreach(var chef in ViewBag.AllChefs){
                int age = DateTime.Now.Year - chef.Birthday.Year;
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@age</td>
                <td>@chef.CreatedDishes.Count</td>
            </tr>
            }
        }

    </table>

</div>
